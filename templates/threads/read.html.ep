% extends 'base';
<%= content extra_headers => begin %>
	<title>
		<%=l 'topic' %> <%= $id %>
	</title>
<% end %>

<%= content body => begin %>
<div class=page>
	<% for my $post (@$posts){ %>
		<div class="post rounded">
			<div class=date>
				<%= $post->{'post_time'} %>
			</div>
			<div class=text>
				<%= $post->{'post_text'} %>
			</div>
		</div>
	<% } %>
</div>
<% end %>
